<h1><%= title %>: <%= book.title %></h1>

<% if (bookinstances.length > 0) { %>
<p>
    <strong
        >Delete the following copies of the book before attempting to
        delete this book.</strong
    >
</p>
<div style="margin-left: 20px; margin-top: 20px">
    <h4>Copies</h4>
    <dl>
        <% bookinstances.forEach(bookinstance => { %>
        <dt>
            <a href="<%= bookinstance.url %>"
                ><%= bookinstance.imprint %></a
            >
        </dt>
        <dd><%= book.summary %></dd>
        <% }) %>
    </dl>
</div>
<% }else{ %>
<p>Do you really want to delete this Book?</p>
<form method="POST">
    <div class="form-group">
        <input
            type="hidden"
            id="bookid"
            class="form-control"
            name="bookid"
            required
            value="<%= book._id %>"
        />
    </div>
    <button class="btn btn-primary">Delete</button>
</form>
<% } %>
